@model IEnumerable<OnlineStore.Models.Cart>

@{
    ViewData["Title"] = "Index";
 
}

<header>
    <div id="navigation">
        @{Html.RenderPartial("~/Views/Shared/userHeader.cshtml");}
    </div>
</header>

<title>Online Grocery-My Cart</title>

<body>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="userHome">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">myCart</li>
        </ol>
    </nav>
    <div class="container-fluid bg-3 text-center">
        <h3>My Cart</h3>
        
        
            @if (@ViewBag.message == 1)
            {

                <div class="alert alert-success" id="alert">
                    <p>Product Removed Successfully!!</p>
                </div>
            }<br>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10 table-responsive">
                        @if(@ViewBag.total==0)
                        {
                        <br><br>
                        <img src="https://www.gifts.ie/media/GIE/images/checkout/empty-cart-bear.png" width="300" height="200" style="filter:brightness(120%)">
                        <br>
                        <h3><b>Your Cart is empty!</b></h3>
                        <h4>You have no items added in the cart</h4>
                        <a href="vegetables" class="btn btn-info">Add Products</a>
                        }
                    

                    <table class="table table-condensed table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                @if(@ViewBag.total>0)
                                {
                                <th scope="col" style="background-color: yellow;">Total: <i class="fa fa-rupee-sign"></i>@ViewBag.total</th>
                                <th scope="col" style="background-color: yellow;" >
                                <a asp-controller="Orders" asp-action="OrderDetails" asp-rout-email="ViewBag.email">Place order</a></th>
                                }

                            </tr>
                        </thead>
                        <thead>
                            <tr>
                                @if(@ViewBag.total>0)
                                {
                                <th scope="col">S.No</th>
                                <th scope="col">Product Name</th>
                                @*<th scope="col">Category</th>*@
                                <th scope="col"><i class="fa fa-inr"></i> price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Sub Total</th>
                                <th scope="col">Remove <i class='fas fa-trash-alt'></i></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            
                            
                           @{
                            var count =0;
                        @foreach (var item in Model )
                        {
                           
                           count=count+1;
                            <tr>
                                <td id="middle">@count</td>

                            <td id="middle">
                                @item.Pname
                            </td>
                            <td id="middle">
                                <i class="fa fa-inr"></i>
                                @item.Price
                            </td>
                            <td id="middle">
                                @item.Quantity
                            </td>
                            <td id="middle">
                                <i class="fa fa-inr"></i>
                                @item.Total
                            </td>
                            <td id="middle"><a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.Id"  class="btn btn-info">Remove <i class='fas fa-trash-alt'></i></a></td>
                            @*
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>*@
                            </tr>
                        }
                            }
                            
                        </tbody>
                    </table>
                    
                </div>
                <div class="col-sm-1"></div>
            </div>
            
        </div>
    </body>
@*</table>*@
