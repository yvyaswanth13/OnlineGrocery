@model OnlineStore.Models.User

@{
    ViewData["Title"] = "Edit";
}
<head>
    <title>Online Grocery-Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/d/df/Shopping_cart_icon.svg/938px-Shopping_cart_icon.svg.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bodyStyle.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="/js/alert.js"></script>

</head>
<body id="bodyBg">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span> <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="https://pngimage.net/wp-content/uploads/2018/06/grocery-logo-png.png" width="80" height="50" style="filter:brightness(100%);">
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home <i class="glyphicon glyphicon-home"></i></a></li>
                    <li><a href="signUp">Register <i class="glyphicon glyphicon-pencil"></i></a></li>
                    <li><a href="contactUs">Contact Us <i class="glyphicon glyphicon-book"></i></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="active">
                        <a href="login">
                            <span class="glyphicon glyphicon-log-in"></span> Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid bg-3 text-center">
        <br />
        <br />
        <br />
        <div class="row">
            <div class="form-group">
                <h3>Login Form</h3>
            </div>
            <div class="col-sm-2"></div>
            <div class="col-sm-8 form-horizontal">
                <c:if test="${logoutMsg != null}">
                    <div class="alert alert-success" id="alert">
                        <p>${logoutMsg}</p>
                    </div>
                </c:if>
                <c:if test="${message =='notexist'}">
                    <div class="alert alert-danger" id="alert">
                        <p>Incorrect email or Password</p>
                    </div>
                </c:if><br>
                       <form asp-action="Login">
                           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                           <div class="form-group">
                               <label class="control-label col-sm-5"  asp-for="Email" class="control-label"></label>
                               <div class="col-sm-3">

                                   <input asp-for="Email" class="form-control" />
                                   <span asp-validation-for="Email" class="text-danger"></span>
                                   <form:errors path="email" cssStyle="color:red; font-size: 12px" />
                               </div>
                           </div>


                           <div class="form-group">
                               <label class="control-label col-sm-5" asp-for="Password" class="control-label"></label>
                               <div class="col-sm-3">

                                   <input asp-for="Password" class="form-control" />
                                   <span asp-validation-for="Password" class="text-danger"></span>
                               </div>
                           </div>

                           <div class="form-group">
                               <input type="submit" value="Login" class="btn btn-primary" />
                           </div>
                       </form>
                <div class="form-group">
                    <h4><a href="forgotPassword">Forgot Password?</a></h4>
                    <h4>Need an account? <a asp-action="Create">Sign up</a></h4>
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
</body>
<br>
<br>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
