@{
}
@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/d/df/Shopping_cart_icon.svg/938px-Shopping_cart_icon.svg.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="/js/alert.js"></script>
</head>
<style>
    .navbar {
        margin-bottom: 0;
        border-radius: 0;
    }

    body {
        font-family: Comic Sans MS;
    }

    .footer {
        background-color: gold;
        padding: 15px;
        height: 50px;
        position: fixed;
        bottom: 0px;
        width: 100%;
    }

    .boxed {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    #alert {
        max-width: 350px;
        margin: auto;
    }

    table, td, th {
        text-align: center;
        border-collapse: collapse;
        table-layout: auto;
        vertical-align: middle;
    }

    thead {
        background-color: rgb(196,235,231);
    }
</style>
<!--Header-->
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span> <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <img src="https://pngimage.net/wp-content/uploads/2018/06/grocery-logo-png.png" width="80" height="50" style="filter:brightness(100%);">
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <li><a href="adminHome">Home <i class="glyphicon glyphicon-home"></i></a></li>
                <li><a href="addNewProduct">Add Product <i class="glyphicon glyphicon-plus-sign"></i></a></li>
                <li><a asp-controller="Products" asp-action="Index">All Products & Edit Products <i class="glyphicon glyphicon-list-alt"></i></a></li>
                <li><a href="messagesReceived">Messages Received <i class="glyphicon glyphicon-comment"></i></a></li>
                <li><a asp-controller="Orders" asp-action="OrdersRecived">Orders Received <i class="glyphicon glyphicon-folder-close"></i></a></li>
                <li><a asp-controller="Orders" asp-action="CancelledOrders">Cancel Orders <i class="glyphicon glyphicon-remove-circle"></i></a></li>
                <li><a asp-controller="Orders" asp-action="DeliveredOrders">Delivered Orders <i class="glyphicon glyphicon-ok-circle"></i></a></li>
                <li><a asp-controller="Users" asp-action="Logout">@Context.Session.GetString("Email") <i class="glyphicon glyphicon-log-out"></i></a></li>
            </ul>
            <form class="navbar-form navbar-right" role="search" action="search" method="post" style="width:15%;">
                <div class="form-group input-group">
                    <input type="text" class="form-control" placeholder="Search.." name="search">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>
</nav>
<!--table-->
